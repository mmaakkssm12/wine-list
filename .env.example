# ============================================
# КОНФИГУРАЦИЯ ПРИЛОЖЕНИЯ WINESTORE
# ============================================

# Настройки базы данных MySQL/MariaDB
DB_HOST=localhost
DB_USER=maksim
DB_PASSWORD=12345
DB_NAME=is21-18
DB_CHARSET=utf8mb4

# Настройки приложения
APP_NAME=WINESTORE
APP_VERSION=1.0.0
STUDENT_NAME=Иванов Иван Иванович

# Настройки интерфейса
APP_THEME=light  # light/dark/system
APP_LANGUAGE=ru  # ru/en
APP_FONT_SIZE=12

# Настройки экспорта
EXPORT_DIR=exports
REPORTS_DIR=reports
DEFAULT_COMPANY_NAME=WINESTORE

# Настройки обновления
AUTO_UPDATE_ENABLED=false
UPDATE_CHECK_INTERVAL=86400  # в секундах (24 часа)

# Настройки логирования
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=wine_store.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# Настройки безопасности
ENABLE_AUTHENTICATION=false
SESSION_TIMEOUT=3600  # в секундах (1 час)
MAX_LOGIN_ATTEMPTS=5

# Настройки уведомлений
EMAIL_NOTIFICATIONS=false
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-password

# Настройки резервного копирования
BACKUP_ENABLED=true
BACKUP_DIR=backups
BACKUP_INTERVAL=604800  # в секундах (7 дней)
MAX_BACKUPS=10
